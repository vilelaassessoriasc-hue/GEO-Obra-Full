from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
import os

def create_app() -> FastAPI:
    app = FastAPI(title="GeoObra API", version="1.0.0")

    origins = os.getenv("CORS_ALLOW_ORIGINS", "*").split(",")

    app.add_middleware(
        CORSMiddleware,
        allow_origins=origins,
        allow_credentials=True,
        allow_methods=["*"],
        allow_headers=["*"],
    )

    @app.get("/health")
    async def health():
        return {"status": "ok"}

        # registrar rotas de debug
    try:
        from geoobra_backend_v3.app.api.routes_debug import router as debug_router
        app.include_router(debug_router)
    except Exception:
        # se der erro de import, a API ainda assim sobe o /health
        pass
        # rotas principais
    from geoobra_backend_v3.app.api.routes_auth import router as auth_router
    from geoobra_backend_v3.app.api.routes_jobs import router as jobs_router
    app.include_router(auth_router)
    app.include_router(jobs_router)
    from geoobra_backend_v3.app.api.routes_users import router as users_router
    app.include_router(users_router)

    return app

app = create_app()



